# ===========================================
# NexusDialer Environment Configuration
# ===========================================

# Application
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# Database (CockroachDB)
DATABASE_URL=postgresql://root@localhost:26257/nexusdialer?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-in-production

# FreeSWITCH
FREESWITCH_HOST=localhost
FREESWITCH_ESL_PORT=8021
FREESWITCH_ESL_PASSWORD=ClueCon

# WebRTC (Janus)
JANUS_URL=ws://localhost:8188
JANUS_API_SECRET=janusrocks

# AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key
DEEPGRAM_API_KEY=your-deepgram-api-key
OPENAI_API_KEY=your-openai-api-key

# Storage (S3-compatible)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_RECORDINGS=recordings
S3_BUCKET_UPLOADS=uploads

# Email (for notifications)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@nexusdialer.local

# Twilio (optional, for SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_OMNICHANNEL=true
